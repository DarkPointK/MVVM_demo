<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/gride_inputview_details"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        android:weightSum="3">

        <Button
            android:background="@drawable/btn_submit_shape_blue"
            android:id="@+id/bt_inputview_null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/empty"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:background="@drawable/btn_submit_shape_grey"
            android:id="@+id/bt_inputview_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/del"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:background="@drawable/btn_submit_shape_red"
            android:id="@+id/bt_inputview_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>

    <!--240-->
    <!--180-->
    <GridView
        android:id="@+id/gride_inputview_details"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/ll_inputview_type"
        android:gravity="center"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/ll_inputview_type"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_inputview_chinese"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bt_blue"
            android:gravity="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_inputview_char"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bt_blue"
            android:gravity="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_inputview_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bt_blue"
            android:gravity="center"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>